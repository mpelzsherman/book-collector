<div id="user-bar">
  <% if user_signed_in? %>
    Logged in as <%= current_user.email %>
    (<%= link_to "Log out", destroy_user_session_path, { :title => "Log out", :method => :delete }    %>)
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, { :title => "Create an account" } %>
    <%= link_to "Log in",  new_user_session_path,  { :title => "Log in" } %>
  <% end %>
</div>